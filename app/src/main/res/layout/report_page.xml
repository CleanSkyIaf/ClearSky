<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sendReportLayout">

        <TextView
            android:text="bird type:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/birdType"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/location"
            android:layout_alignStart="@+id/location"
            android:layout_marginTop="17dp" />

        <TextView
            android:text="location:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:id="@+id/location"
            android:layout_below="@+id/birdType"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="77dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignTop="@+id/location"
            android:layout_alignLeft="@+id/birdTypeText"
            android:layout_alignStart="@+id/birdTypeText"
            android:id="@+id/locationText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dateText"
            android:layout_alignTop="@+id/date"
            android:layout_alignLeft="@+id/directionText"
            android:layout_alignStart="@+id/directionText" />

        <TextView
            android:text="direction:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/direction"
            android:layout_marginTop="54dp"
            android:layout_below="@+id/locationText"
            android:layout_alignLeft="@+id/location"
            android:layout_alignStart="@+id/location" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/directionText"
            android:layout_alignTop="@+id/direction"
            android:layout_alignLeft="@+id/locationText"
            android:layout_alignStart="@+id/locationText" />

        <TextView
            android:text="date:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:layout_below="@+id/directionText"
            android:layout_alignLeft="@+id/direction"
            android:layout_alignStart="@+id/direction"
            android:layout_marginTop="55dp" />

        <TextView
            android:text="amountOfBirds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amount"
            android:layout_below="@+id/dateText"
            android:layout_alignLeft="@+id/date"
            android:layout_alignStart="@+id/date"
            android:layout_marginTop="60dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/amountText"
            android:layout_alignTop="@+id/amount"
            android:layout_alignLeft="@+id/dateText"
            android:layout_alignStart="@+id/dateText" />

        <Button
            android:text="send report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amountText"
            android:layout_alignRight="@+id/amountText"
            android:layout_alignEnd="@+id/amountText"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:id="@+id/sendReport"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/birdTypeText"
            android:layout_alignTop="@+id/birdType"
            android:layout_toRightOf="@+id/amount"
            android:layout_toEndOf="@+id/amount" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/our_location"
            android:id="@+id/locationButton"
            android:layout_alignTop="@+id/locationText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/locationText"
            android:layout_toRightOf="@+id/locationText"
            android:layout_toEndOf="@+id/locationText" />

    </RelativeLayout>
</LinearLayout>