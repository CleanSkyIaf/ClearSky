<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <RelativeLayout
        android:id="@+id/sendReportLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/birdType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/location"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/location"
            android:layout_marginTop="17dp"
            android:text="bird type:" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/birdType"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="77dp"
            android:text="location:" />

        <EditText
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/birdTypeText"
            android:layout_alignStart="@+id/birdTypeText"
            android:layout_alignTop="@+id/location"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/location"
            android:layout_alignStart="@+id/location"
            android:layout_below="@+id/locationText"
            android:layout_marginTop="54dp"
            android:text="direction:" />

        <EditText
            android:id="@+id/directionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/direction"
            android:layout_alignBottom="@+id/direction"
            android:layout_alignLeft="@+id/locationText"
            android:layout_alignStart="@+id/locationText"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/direction"
            android:layout_alignStart="@+id/direction"
            android:layout_below="@+id/directionText"
            android:layout_marginTop="55dp"
            android:text="date:" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/amountText"
            android:layout_alignBottom="@+id/amountText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:text="amountOfBirds" />

        <EditText
            android:id="@+id/amountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dateText"
            android:layout_alignStart="@+id/dateText"
            android:layout_below="@+id/dateText"
            android:layout_marginTop="37dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/sendReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/amountText"
            android:layout_alignLeft="@+id/amount"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/amountText"
            android:layout_alignStart="@+id/amount"
            android:layout_marginBottom="16dp"
            android:text="send report" />

        <EditText
            android:id="@+id/birdTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/birdType"
            android:layout_toEndOf="@+id/amount"
            android:layout_toRightOf="@+id/amount"
            android:ems="10"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/locationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/locationText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/locationText"
            android:layout_toEndOf="@+id/locationText"
            android:layout_toRightOf="@+id/locationText"
            app:srcCompat="@mipmap/our_location" />

        <EditText
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/directionText"
            android:layout_alignRight="@+id/directionText"
            android:layout_below="@+id/directionText"
            android:layout_marginTop="43dp"
            android:focusable="false"
            android:ems="10"
            android:inputType="date" />

    </RelativeLayout>
</LinearLayout>

